<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APPCOFFIE.MVVM.View.Aut.Login"
             Title="Login">
    <VerticalStackLayout Padding="20">
        <Label Text="Correo" />
        <Entry Text="{Binding Correo}" Placeholder="Usuario" />

        <Label Text="Contraseña" />
        <Entry Text="{Binding Password}" Placeholder="Contraseña" IsPassword="True" />

        <Button Text="Login" Command="{Binding LoginCommand}" Margin="20"/>
    </VerticalStackLayout>
</ContentPage>